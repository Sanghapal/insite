<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "field">
    <%= f.label :name, 'Name' %><br>
    <%= f.text_field :name %>
  </div>
  <div class = "field" >
    <%= f.label :birthdate, 'Date of birth' %><br>
    <%= f.text_field :birthdate %>
  </div>
  <div class = "field">
    <%= f.label :gender, 'Gender' %><br>
    <%= f.radio_button :gender, "Female", :checked => true %>
    <%= label :gender_female, "Female" %>
    <%= f.radio_button :gender, "Male" %>
    <%= label :gender_male, "Male" %>
  </div> 
  <div class = "field" %>
    <%= f.label :email, "Email Id"%><br>
    <%= f.email_field :email %>
  </div>
  <div class = "field">
    <%= f.label :mobile_number %><br>
    <%= f.text_field :mobile_number %>
  </div>
  <div class = "field">
    <%= f.label :address, "Address" %><br>
    <%= f.text_area :address %>
  </div>
  <div class = "field">
    <%= f.label :country, "Country" %>
    <%= f.select(:country, [["India",1], ["America", 2], ["Spen", 3]]) %>
  </div>
  <div class = "field">
    <%= f.label :pin_code %><br>
    <%= f.text_field :pin_code %>
  </div>
  <div class = "field">
    <%= f.label :hobbies, "Select Hobbies" %><br>
    <% User::HOBBIES.each do |hobbie| %>
      <%= f.check_box :hobbies, {name: "user[hobbies][]"}, hobbie, nil %>
      <%= f.label hobbie %><br>
    <% end %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
